    "configurations": [
        {
            "name": "Run Init",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/venv-helper.py",
            "console": "integratedTerminal",
            "args": [
                "--script-dir", 
                "temp",
                "--action",
                "init"
            ]
        },
        {
            "name": "Run Cert Setup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/venv-helper.py",
            "console": "integratedTerminal",
            "args": [
                "--script-dir", 
                "temp",
                "--action",
                "cert-setup"
            ]
        }
    ]
}
